{{!< default}}

<div class="content-area">
    <main class="site-main">
        <header class="feed-header container medium">
            <div class="feed-header-wrapper">
                <h2 class="feed-header-title">Latest</h2>
                <div class="feed-layout">
                    <button class="button-icon feed-layout-headline">{{> icons/list-headline}}</button>
                    <button class="button-icon feed-layout-expanded">{{> icons/list-bullet}}</button>
                </div>
            </div>
        </header>

        <div class="post-feed container medium">
            {{^unless @member}}
                {{#foreach posts visibility="all"}}
                    {{> "loop"}}
                {{/foreach}}
            {{else}}
                {{#foreach posts visibility="all"}}
                    {{> "loop"}}
                {{/foreach}}
            {{/unless}}
        </div>

        {{pagination}}
    </main>
</div>

{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{#if @site.cover_image}} with-full-cover{{#if @member}} with-alt-header{{/if}}{{/if}}{{#if @member}} logged-in{{/if}}{{/contentFor}}