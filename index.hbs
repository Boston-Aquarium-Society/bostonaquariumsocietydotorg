{{!< default}}

<div class="content-area">
    <main class="site-main">
        <div class="feed-layout container medium">
            <div class="feed-layout-wrapper">
                <button class="button-icon feed-layout-headline">{{> icons/list-headline}}</button>
                <button class="button-icon feed-layout-expanded">{{> icons/list-bullet}}</button>
            </div>
        </div>
        <div class="post-feed container medium">
            {{#foreach posts visibility="all"}}
                {{> "loop"}}
            {{/foreach}}
        </div>
        {{pagination}}
    </main>
</div>

{{#contentFor "body_class"}}{{#if next}} paged-next{{/if}}{{#if @site.cover_image}} with-full-cover{{/if}}{{/contentFor}}